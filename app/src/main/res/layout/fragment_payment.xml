<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/top_bar_menu"
        app:title="Course Title"
        app:titleCentered="true" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="96dp"
        android:layout_height="83dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="32dp"
        android:background="#FE6E6E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topAppBar"
        app:srcCompat="@drawable/marketing" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="151dp"
        android:layout_height="82dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/topAppBar">

        <TextView
            android:id="@+id/dm_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Digital Marketing"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/dm_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Analysis" />

        <TextView
            android:id="@+id/dm_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  by Kris Wu"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/dm_tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/dm_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:text=" RM 188"
            android:textColor="@color/light_blue"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="129dp"
        android:layout_height="253dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Method" />

        <RadioButton
            android:id="@+id/rb_paypal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="**** 8304                          " />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="36dp" />

        <RadioButton
            android:id="@+id/rb_visa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" **** 8888" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="36dp" />

        <RadioButton
            android:id="@+id/rb_tng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" **** 8668" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="55dp"
        app:layout_constraintStart_toEndOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:srcCompat="@drawable/paypal" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="38dp"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:srcCompat="@drawable/visa" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="38dp"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        app:srcCompat="@drawable/tng" />

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="143dp"
        android:layout_height="50dp"
        android:backgroundTint="#4E82BF"
        android:text="Pay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.426" />

</androidx.constraintlayout.widget.ConstraintLayout>